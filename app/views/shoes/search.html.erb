<div class="list-header"> 
  <h1> Let's get started! </h1>
  </div> 
 
<div class="row">
  <div class="col-md-6 col-md-offset-3" role="search">
    <div class="form-group">
      <%= form_for(:shoes, url: get_results_path) do |s| %>
    </div>
    <div class="form-group">
        <%= s.label :brand_name%>
        <%= s.text_field :brand_name, :class => "form-control", :placeholder => "adidas"%>
          </div>
        <div class="form-group">
      <%= s.label :product_name %>
        <%= s.text_field :product_name, :class => "form-control", :placeholder => "sambas" %>
          </div>
        <div class="form-group">
        <%= s.label :size %>
        <%= s.text_field :size, :class => "form-control", :placeholder => "US only! ex: 9.5" %>
        </div>

        <%= s.submit "Search", :class => "btn btn-default" %>
      <% end %> 
    </div>
  </div>